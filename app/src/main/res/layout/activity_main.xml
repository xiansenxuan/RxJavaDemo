<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xuan.rxjava.MainActivity">

    <TextView
        android:id="@+id/tv_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:background="@color/base_blue"
        android:textColor="#23A859"
        android:padding="16dp"
        android:text="rxjava" />

    <TextView
        android:id="@+id/tv_rxbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_rxjava"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:background="@color/base_blue"
        android:padding="16dp"
        android:textColor="#C67A3D"
        android:text="rxbus" />

    <TextView
        android:id="@+id/tv_eventbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        android:padding="16dp"
        android:textColor="#C67A3D"
        android:text="eventbus"
        android:layout_below="@+id/tv_rxjava"
        android:layout_alignLeft="@+id/tv_rxjava"
        android:layout_alignStart="@+id/tv_rxjava"
        android:layout_marginTop="41dp" />

    <TextView
        android:id="@+id/tv_eventbus_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/base_blue"
        android:padding="16dp"
        android:textColor="#C67A3D"
        android:text="eventbus_fragment"
        android:layout_below="@+id/tv_rxjava"
        android:layout_alignLeft="@+id/tv_rxjava"
        android:layout_alignStart="@+id/tv_rxjava"
        android:layout_marginTop="41dp" />
</RelativeLayout>
